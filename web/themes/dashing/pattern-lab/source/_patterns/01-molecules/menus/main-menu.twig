<ul class="nav-pills menu nav">
  {% for item in items %}
     {% set classes = 'menu-item nav-item'%}
          {#item.is_expanded ? 'menu-item--expanded',#}
          {#item.is_collapsed ? 'menu-item--collapsed',#}
          {#item.in_active_trail ? 'menu-item--active-trail',#}
      <li class="{{ classes }}">
        {% if loop.index == 1 %}
          {{ link(item.title, item.url, { 'class':['nav-link', 'is-active']}) }}
        {% else %}
          {{ link(item.title, item.url, { 'class':['nav-link']}) }}
        {% endif %}
      </li>
  {% endfor %}
</ul>
